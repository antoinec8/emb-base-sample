menu "Zephyr"
source "Kconfig.zephyr"
endmenu

config LED_PIN
    int "GPIO pin number for LED"
    default 2
    help
      GPIO pin number for controlling the LED

config BUTTON_PIN
    int "GPIO pin number for Button"
    default 3
    help
      GPIO pin number for the button input

config PWM_DUTY_CYCLE_MIN
    int "Minimum PWM duty cycle"
    default 0
    help
      Minimum PWM duty cycle value (0-100)

config PWM_DUTY_CYCLE_MAX
    int "Maximum PWM duty cycle"
    default 100
    help
      Maximum PWM duty cycle value (0-100)

config PWM_FADE_STEP
    int "PWM fade step"
    default 5
    help
      Step value for PWM fade effect (1-100)

menu "SNTP Configuration"

config SNTP_SERVER
    string "SNTP server hostname"
    default "pool.ntp.org"
    help
      Hostname or IP address of the SNTP server to use for time synchronization.
      Examples: pool.ntp.org, time.google.com, 192.0.2.2

config SNTP_SYNC_INTERVAL
    int "SNTP synchronization interval (seconds)"
    default 60
    range 10 3600
    help
      Interval in seconds between SNTP synchronization attempts.
      Minimum: 10 seconds, Maximum: 3600 seconds (1 hour)

endmenu
